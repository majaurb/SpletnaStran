<?php
error_reporting(E_ALL);
session_start();

//session_destroy();

// get it from DB based on my username
$config = [
    'UserName' => 'admin',
    'Password' => 'myadmin'
];

var_dump($_SESSION);

$FormData = (isset($_POST)) ? $_POST : null;
if(isset($FormData) && isset($FormData['submit'])) {
    $UserName = (isset($FormData['UserName'])) ? $FormData['UserName'] : null;
    $Password = (isset($FormData['Password'])) ? $FormData['Password'] : null;

    if($UserName && $Password) {
        if($UserName == $config['UserName'] && $Password == $config['Password']) {
            $_SESSION = ['LogIn' => true];

            header("Location: obrazec.php");
        } else {
            echo "Niso pravilni podatki";
        }
    } else {
        echo "Nisi izpolnil vseh obveznih podatkov!";
    }
}
?>
<!DOCTYPE html>
<html>
    <head>
        <title>obrazec</title>
    </head>
    <body>
        <form method="post">
            <div class="form-group">
                <label>Uporabniško ime</label>
                <input type="text" name="UserName" placeholder="Vnesi uporabniško ime" required>
            </div>
            <div class="form-group">
                <label>Geslo</label>
                <input type="password" name="Password" placeholder="Vnesi geslo" required>
            </div>
            <input type="submit" name="submit" value="Prijava">
        </form>
    </body>
</html>
